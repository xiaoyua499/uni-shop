/* 水平间距 */
.scroll-container {
  display: flex;
}
.scroll-container .left-scroll-container {
  width: 120px;
}
.scroll-container .left-scroll-container .left-scroll-item {
  line-height: 60px;
  background-color: #f7f7f7;
  text-align: center;
  font-size: 12px;
}
.scroll-container .left-scroll-container .left-scroll-item.active {
  background-color: #ffffff;
  position: relative;
}
.scroll-container .left-scroll-container .left-scroll-item.active::before {
  content: " ";
  display: block;
  width: 3px;
  height: 30px;
  background-color: #c00000;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.scroll-container .right-scroll-container .cateLevel2 .cateLevel2-item {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  padding: 15px 0;
}
.scroll-container .right-scroll-container .cateLevel2 .cateLevel3 {
  display: flex;
  flex-wrap: wrap;
}
.scroll-container .right-scroll-container .cateLevel2 .cateLevel3 .cateLevel3-list {
  width: 33.33%;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.scroll-container .right-scroll-container .cateLevel2 .cateLevel3 .cateLevel3-list image {
  width: 60px;
  height: 60px;
}
.scroll-container .right-scroll-container .cateLevel2 .cateLevel3 .cateLevel3-list .cateLevel3-item {
  font-size: 12px;
}